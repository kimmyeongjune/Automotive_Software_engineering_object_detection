{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-9 build active file",
            "command": "/usr/bin/g++-9",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/include/opencv4",  // OpenCV 헤더 파일 경로
                "-L/usr/lib/x86_64-linux-gnu",  // OpenCV 라이브러리 경로
                "-lopencv_core",  // OpenCV 코어 라이브러리
                "-lopencv_imgproc",  // OpenCV 이미지 처리 라이브러리
                "-lopencv_highgui",  // OpenCV GUI 라이브러리
                "-lopencv_imgcodecs",  // OpenCV 이미지 코덱 라이브러리
                "-lopencv_objdetect",  // OpenCV 객체 탐지 라이브러리 (Cascade Classifier 관련)
                "-lopencv_videoio"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
